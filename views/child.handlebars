<div class="row">
    <div class="col s12 m6 offset-m3">
        <h1>Welcome {{child.nickname}}!</h1>
    </div>
</div>

{{#if childSummaryPage}}
    <div id="child-summary-area" class="row">
        <div class="col s12 m6">
            <ul class="collection with-header white">
                <li class="collection-header red accent-4"><h4 class="center-align">Missions Available</h4></li>
                <div class="row">
                    <div class="col s8 offset-s2">
                        {{#each missions_assigned}}
                            <a href="#!" class="collection-item">
                                <p class="center-align black-text">{{mission_title}}</p>
                            </a>
                        {{/each}}
                    </div>
                </div>
            </ul>
            <div class="card footer center-align">
                <a href="/child-missions">See More Missions!</a>
                <a class="btn-floating btn-large waves-effect waves-light red" href="/child-missions"><i class="material-icons">add</i></a>
            </div>
        </div>
        <div class="col s12 m6">
            <ul class="collection with-header white">
                <li class="collection-header red accent-4"><h4 class="center-align">Rewards Earned</h4></li>
                <div class="row">
                    <div class="col s8 offset-s2">
                        {{#each rewards_earned}}
                            <a href="#!" class="collection-item">
                                <p class="center-align black-text">{{reward_id}}</p>
                            </a>
                        {{/each}}
                    </div>
                </div>
            </ul>
            <div class="card footer center align">
                <a href="/child-rewards">Claim Your Rewards!</a>
                <a class="btn-floating btn-large waves-effect waves-light red" href="/child-rewards"><i class="material-icons">add</i></a>
            </div>
        </div>
    </div>
{{/if}}

{{#if childMissionsPage}}
    <div class="row">
        <div class="col s12 m8 offset-m2">
            <ul class="collection with-header white">
                <li class="collection-header red accent-4"><h4 class="center-align">Missions Available</h4></li>
                <div class="row">
                    <div class="col s8 offset-s2">
                        {{#each missions_assigned}}
                            <a href="#!" class="collection-item">
                                <h3 class="center-align black-text">{{mission_title}}</h3>
                                <h5 class="center-align black-text">Worth: {{mission_point_value}} Points</h5>
                                <p class="black-text">{{mission_description}}</p>
                                <a class="btn btn-large waves-effect waves-light red accent-4" id="mission_accomplished" value={{mission_id}}><p>Mission Accomplished!</p></a>
                            </a>
                        {{/each}}
                    </div>
                </div>
            </ul>
        </div>
    </div>
{{/if}}

{{#if childRewardsPage}}
    <div class="row">
        <div class="col s12 m8 offset-m2">
            <ul class="collection with-header white">
                <li class="collection-header red accent-4"><h4 class="center-align">Rewards Earned</h4></li>
                <div class="row">
                    <div class="col s8 offset-s2">
                        {{#each rewards}}
                            <a href="#!" class="collection-item">
                                <h3 class="center-align black-text">{{reward_id}}</h3>
                                <h5 class="center-align black-text">Cost: {{reward_points_required}} Points</h5>
                            </a>
                            <a class="btn btn-large waves-effect waves-light red accent-4" id="reward_claim_btn" value={{reward_id}}><p>Claim This Prize!</p></a>
                        {{/each}}
                    </div>
                </div>
            </ul>
        </div>
    </div>
{{/if}}

{{#if childComicsPage}}
    <div class="row">
        <div class="col s12 m8 offset-m2">
            <ul class="collection with-header white">
                <li class="collection-header red accent-4"><h4 class="center-align">Comics Earned</h4></li>
                <div class="row">
                    <div class="col s8 offset-s2">
                        {{#each comics}}
                            <a href="#!" class="collection-item">
                                <h3 class="center-align black-text">{{comic_id}}</h3>
                            </a>
                        {{/each}}
                    </div>
                </div>
            </ul>
        </div>
    </div>
{{/if}}

