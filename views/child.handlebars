<div class="row">
    <div class="col s12 m6 offset-m3">
        <h1 class="white">Welcome {{child.nickname}}!</h1>
    </div>
</div>

{{#if childSummaryPage}}
<div id="child-summary-area" class="row">
    <div class="col s12 m6">
        <ul class="collection with-header white">
            <li class="collection-header red accent-4"><h4 class="center-align">Missions Available</h4></li>
                <div class="row">
                    <div class="col s8 offset-s2">

                            {{#each missions_assigned}}
                                <a href="#!" class="collection-item">
                                <p class="center-align black-text">{{mission_title}}</p>
                                </a>
                            {{/each}}

                    </div>
                </div>
        </ul>
    </div>
    <div class="col s12 m6">
        <ul class="collection with-header white">
            <li class="collection-header red accent-4"><h4 class="center-align">Rewards Earned</h4></li>
            <div class="row">
                <div class="col s8 offset-s2">
                    {{#each rewards_earned}}
                        <a href="#!" class="collection-item">
                            <p class="center-align black-text">{{reward_id}}</p>
                        </a>
                    {{/each}}
                </div>

            </div>

        </ul>
    </div>
</div>
{{/if}}

{{#if childMissionsPage}}
    <div class="row">
        <div class="col s12 m8 offset-m2">
            <ul class="collection with-header white">
                <li class="collection-header red accent-4"><h4 class="center-align">Missions Available</h4></li>
                {{#each missions_assigned}}
                    <div class="row">
                        <div class="col s8 offset-s2">
                            <div class="card">
                                <div class="card-content">
                                    <p class="center-align black-text">{{mission_name}}</p>
                                    <p class="center-align black-text">{{mission_pt_val}}</p>
                                    <p class="center-align black-text">{{mission_desc}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </ul>
        </div>
    </div>
{{/if}}

{{#if childRewardsPage}}

{{/if}}

